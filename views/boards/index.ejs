<!-- ボード画面 -->
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" http-equiv="content-type" content="text/html" />
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
  </head>
  <body class="container">
    <header><h1 class="display-4"><%= title %></h1></header>
    <div role="main">
      <p>Welcome To <%= login.name %></p>
      <form method="post" action="/boards/add">
        <div class="row">
          <div class="col-10">
            <input type="text" name="message" class="form-control" />
          </div>
          <input type="submit" class="btn btn-primary col-2" value="送信" />
        </div>
      </form>

      <table class="table mt-5">
        <% for(const item of content){ %> <%- include("data_item",{item:item})
        %> <% } %>
      </table>

      <ul class="pagination justify-content-center">
        <li class="page-item">
          <a href="/boards/<%= page - 1  %>" class="page-link">&lt;&lt; prev</a>
        </li>
        <li class="page-item">
          <a href="/boards/<%= page + 1  %>" class="page-link">Next &gt;&gt;</a>
        </li>
      </ul>
    </div>
  </body>
</html>
