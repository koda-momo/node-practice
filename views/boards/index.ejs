<!-- ボード画面 -->
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" http-equiv="content-type" content="text/html" />
    <title><%= title %></title>
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
  </head>
  <body class="container">
    <header><h1 class="display-4"><%= title %></h1></header>
    <div role="main">
      <p>Welcome To <%= login.name %></p>
      <form method="post" action="/boards/add">
        <div class="row">
          <div class="col-10">
            <input type="text" name="message" class="form-control" />
          </div>
          <input type="submit" class="btn btn-primary col-2" value="送信" />
        </div>
      </form>

      <table>
        <% for(const item of content){ %>
        <tr class="row">
          <th class="col-2">
            <a
              class="text-dark"
              href="/boards/home/<%= item.User.name %>/<%= item.userId %>/0"
              ><%= item.User.name %></a
            >
          </th>
          <td class="col-7"><%= item.message %></td>
          <% const beforeDate = new Date(item.createdAt) %> <% const year =
          beforeDate.getFullYear() %> <% const month = beforeDate.getMonth() + 1
          %> <% const date = beforeDate.getDate() %> <% const hour =
          beforeDate.getHours() %> <% const minute = beforeDate.getMinutes() %>
          <td class="col-3">
            <%= year %>年<%= month %>月<%= date %>日<%= hour %>:<%= minute%>
          </td>
        </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>
